generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  email       String      @unique
  hash        String
  hashedRt    String?
  role        Role        @default(USER)

  @@map("user")
}

model Product {
  id          Int @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  description String
  price       Int
  quantity    Int

  @@map("product")
}